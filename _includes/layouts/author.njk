---
layout: layouts/base.njk
bodyClass: author-template
---
{% block styles %}
<link rel="stylesheet" type="text/css" href="/theme/css/listing.css">
{% endblock %}

{#- Hero section #}
<section class="m-hero">
	<div class="m-hero__content">
		{% if metadata.author.image %}
		<div class="m-hero-avatar" style="background-image: url({{ metadata.author.image }});"></div>
		{% else %}
		<div class="m-hero-avatar" style="background-image: url(/theme/images/default-avatar-square-normal.jpg);"></div>
		{% endif %}
		<h1 class="m-hero-title">{{ metadata.author.name }}</h1>
		{% if metadata.author.bio %}
		<p class="m-hero-description">{{ metadata.author.bio }}</p>
		{% endif %}
		<div class="m-hero__meta">
			<ul class="m-hero-social">
				{% if metadata.author.website %}
				<li>
					<a href="{{ metadata.author.website }}" target="_blank" rel="noopener" aria-label="Website">
						<span class="icon-globe"></span>
					</a>
				</li>
				{% endif %}
				{% if metadata.facebook %}
				<li>
					<a href="{{ metadata.facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
						<span class="icon-facebook"></span>
					</a>
				</li>
				{% endif %}
				{% if metadata.author.twitter %}
				<li>
					<a href="https://twitter.com/{{ metadata.author.twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
						<span class="icon-twitter"></span>
					</a>
				</li>
				{% endif %}
			</ul>
			<ul class="m-hero-stats">
				<li>
					{{ collections.posts.length }} bài viết
				</li>
			</ul>
		</div>
	</div>
</section>

<div class="l-content">
	<div class="l-wrapper">
		<div class="m-author-bio">
			{{ content | safe }}
		</div>
	</div>
</div>
