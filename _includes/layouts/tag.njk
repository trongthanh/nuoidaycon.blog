---
layout: layouts/base.njk
bodyClass: tag-template
---
{% block styles %}
<link rel="stylesheet" type="text/css" href="/theme/css/listing.css">
{% endblock %}

{#- Hero section #}
<section class="m-hero">
	<div class="m-hero__content">
		<h1 class="m-hero-title bigger">{{ tag }}</h1>
		<div class="m-hero__meta">
			<ul class="m-hero-stats">
				<li>
					{{ collections[tag].length or 0 }} bài viết
				</li>
			</ul>
		</div>
	</div>
</section>

<div class="l-content">
	<div class="l-wrapper">
		<div class="l-grid centered">
			{% set postsInTag = collections[tag] %}
			{% for post in postsInTag | reverse %}
			{% include "partials/article-card.njk" %}
			{% endfor %}
		</div>
	</div>
</div>
