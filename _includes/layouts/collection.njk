---
layout: layouts/base.njk
bodyClass: tag-template
---
{% block styles %}
<link rel="stylesheet" type="text/css" href="/theme/css/listing.css">
{% endblock %}

{% set postslist = collections[collectionName] %}

{#- Hero section #}
<section class="m-hero">
	<div class="m-hero__content">
		<h1 class="m-hero-title bigger">{{ title }}</h1>
		{% if description %}
		<p class="m-hero-description">{{ description }}</p>
		{% endif %}
		<div class="m-hero__meta">
			<ul class="m-hero-stats">
				<li>
					{{ postslist.length or 0 }} bài viết
				</li>
			</ul>
		</div>
	</div>
</section>

<div class="l-content">
	<div class="l-wrapper">
		<div class="l-grid centered">
			{% for post in postslist | reverse %}
			{% include "partials/article-card.njk" %}
			{% endfor %}
		</div>
	</div>
</div>

{{ content | safe }}
